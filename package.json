{
  "name": "cssnano",
  "private": true,
  "scripts": {
    "docs": "cd docs && npm run build && cd .. && gh-pages -d docs/dist",
    "fixlint": "eslint --fix --ignore-path .gitignore packages/**/src util",
    "report": "nyc report --reporter=html",
    "pretest": "eslint --ignore-path .gitignore packages/**/src util",
    "test": "nyc ava"
  },
  "engines": {
    "node": ">=4"
  },
  "devDependencies": {
    "all-contributors-cli": "^4.0.0",
    "ava": "^0.18.1",
    "babel-preset-env": "^1.1.8",
    "babel-register": "^6.23.0",
    "browserslist": "^1.7.5",
    "coveralls": "^2.11.6",
    "cross-env": "^3.1.4",
    "eslint": "^3.0.0",
    "eslint-config-cssnano": "^3.0.0",
    "eslint-plugin-babel": "^3.3.0",
    "eslint-plugin-import": "^2.0.1",
    "gh-pages": "^0.11.0",
    "lerna": "2.0.0-beta.37",
    "nyc": "^10.1.2"
  },
  "ava": {
    "files": [
      "packages/**/src/__tests__/*.js"
    ],
    "concurrency": 5,
    "require": "babel-register"
  },
  "nyc": {
    "exclude": [
      "node_modules",
      "**/__tests__",
      "**/dist",
      "util"
    ]
  },
  "babel": {
    "presets": [
      "env"
    ]
  },
  "eslintConfig": {
    "extends": "cssnano"
  },
  "browserslist": {
    "chrome58": [
      "Chrome 58"
    ],
    "edge15": [
      "Edge 15"
    ],
    "ie6": [
      "IE 6"
    ],
    "ie7": [
      "IE 7"
    ]
  }
}
